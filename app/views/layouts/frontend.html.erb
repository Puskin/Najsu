<!DOCTYPE html>
<html>
<head>
  <title><%= page_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-30915752-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

	</script>
</head>
<body <%="class='app'" if signed_in? %>>

	<div class="navbar navbar-fixed-top" id="header">
	 <div class="navbar-inner">
			<div class="container-fluid">
				<%= link_to "Najsu", root_path, :class => "brand" %>
				
	      <ul class="nav">
	          <li><%= link_to "Home", root_path %></li>
 	          <li><%= link_to "Timeline", timeline_path %></li>

	          <% unless signed_in? %>
	            <li><%= link_to "Zaloguj siÄ™", signin_path %></li>
	            <li><%= link_to "Rejestracja", signup_path %></li>
	          <% end %>

            <% if signed_in? %>
            	<li><%= link_to "Sign out", signout_path, method: "delete" %></li>
            	<!--
            	<li><%= link_to "#{image_tag(gravatar_url_for(current_user),:size => '20x20')}#{current_user.name}".html_safe, user_path(current_user) %></li>
            	-->
	          <% end %>
	      </ul>

	    </div>
	  </div>
	</div>

	<div class="container-fluid" id="content">

		<div class="row-fluid">
			<div class="span12">
				<% flash.each do |key, value| %>
		      <div class="alert alert-<%= key %>"><%= value %></div>
		    <% end %>
				<%= yield %>
			</div>
		</div>

	</div>

	<div class="container-fluid">
		<%= render "layouts/footer" %>
	</div>

	<% if Rails.env.development? %>
		<div class="container-fluid">
      <%= debug(params) %>
    </div>
  <% end %>

 	<%= render "layouts/modal" %>

  <div class="overlay" id="cinema">
  </div>
	
</body>
</html>
