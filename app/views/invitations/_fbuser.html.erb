<li id="row_<%=friend.identifier %>">
	<%= image_tag("http://graph.facebook.com/#{friend.identifier}/picture", :size => "20x20") %>
	<%= friend.name %>
	<% if current_user.invitations.find_by_uid(friend.identifier) %>
		<div class='alert alert-success pull-right mini'>Invite sent</div>
	<% else %>
		<%= link_to "Invite", new_invitation_path(:uid => friend.identifier), :disable_with => "Loading...",
		:remote => true, :class => "btn btn-mini pull-right", :id => "button_#{friend.identifier}" %>
	<% end %>
</li>