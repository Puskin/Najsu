<% if @comment.content != "" %>
	$("#moviesList #clip_<%=@comment.movie_id%> .comments").append("<%= escape_javascript( render :partial => 'comments/comment', :locals => { :comment => @comment} ) %>")       
	$("#lightbox_comments ul").append("<%= escape_javascript( render :partial => 'comments/comment', :locals => { :comment => @comment} ) %>")          
   
	$("#moviesList #clip_<%=@comment.movie_id%> #new_comment #comment_content").val("");                   
	$("#lightbox_comments #comment_content").val("");     

	$('#lightbox_comments ul').animate({ scrollTop: $("#comment_<%=@comment.id%>").offset().top }, 0);                   
      
	$('#moviesList').masonry({
	 	itemSelector: '.movie'
	});
<% end %>