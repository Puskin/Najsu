<% provide(:title, 'Lista użytkowników') %>

<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user, :class => "btn btn-mini" %></td>
    <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-mini" %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, :class => "btn btn-mini btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path, :class => "btn btn-primary" %>
